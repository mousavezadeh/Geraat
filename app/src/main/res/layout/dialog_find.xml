<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@mipmap/input_box_error" android:layout_width="wrap_content" android:layout_height="330dp">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="35sp" android:textColor="#3e3e3e" android:gravity="center" android:layout_gravity="center" android:id="@+id/textView1" android:background="@mipmap/input_box_error" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text=" جستجو"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/row_postalcode" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Spinner android:id="@+id/spinner1" android:layout_width="92dp" android:layout_height="match_parent" android:layout_weight="0.26" android:spinnerMode="dialog"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/row_mobilenumber" android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:textSize="20sp" android:id="@+id/txt_finddialog_value" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:hint="شماره موبایل" android:ems="15" android:maxLength="11" android:inputType="number"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <Button android:textSize="30sp" android:id="@+id/btn_finddialog_ok" android:layout_width="wrap_content" android:layout_height="60dp" android:layout_margin="2dp" android:text="جستجو" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_weight="1">
            <Button android:textSize="30sp" android:id="@+id/btn_finddialog_cancel" android:layout_width="wrap_content" android:layout_height="60dp" android:layout_margin="2dp" android:text="بازگشت" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
