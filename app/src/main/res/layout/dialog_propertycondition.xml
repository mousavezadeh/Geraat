<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@mipmap/input_box_error" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="25sp" android:textColor="#3e3e3e" android:gravity="center" android:layout_gravity="center" android:id="@+id/textView1" android:background="@mipmap/input_box_error" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="وضعیت ملک"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/row_postalcode" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/row_mobilenumber" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="25sp" android:textColor="#3e3e3e" android:gravity="center" android:layout_gravity="center" android:id="@+id/txt_illigalbranch_message" android:background="@mipmap/input_box_error" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="مخروبه"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <Button android:textSize="30sp" android:id="@+id/btn_illigalbranch_ok" android:layout_width="wrap_content" android:layout_height="60dp" android:layout_margin="2dp" android:text="می خوام قرائت کنم" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_weight="1">
            <Button android:textSize="30sp" android:id="@+id/btn_illigalbranch_cancel" android:layout_width="wrap_content" android:layout_height="60dp" android:layout_margin="2dp" android:text="برو بعدی" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
