<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/input_box_error"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#3FAAB8AE"
        android:gravity="center"

        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        >

        <TextView
            android:id="@+id/txt_shgh_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="شناسه قبض"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/input_box_error"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/txt_shgh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500849443719"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#3FAAB8AE"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        >

        <TextView
            android:id="@+id/txt_shpa_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="شناسه پرداخت"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp" />
    </LinearLayout>
    <LinearLayout
        android:background="@mipmap/input_box_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_shpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16333227207"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp" />




    </LinearLayout>
    <LinearLayout
        android:background="@mipmap/input_box_error"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edittext_ghest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="مبلغ قسط به ریال"
            android:inputType="numberSigned"
            android:textSize="30sp"></EditText>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_send_sms"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="ارسال پیامک"
            android:textSize="24sp" />

    </LinearLayout>



</LinearLayout>
