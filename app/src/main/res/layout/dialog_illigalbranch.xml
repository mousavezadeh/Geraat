<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@mipmap/input_box_error" android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@mipmap/input_box_error"
            android:gravity="center"
            android:text="ثبت گزارشات"
            android:textColor="#3e3e3e"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/row_postalcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/row_mobilenumber11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_mobilenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_illigalbranch_serialno"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ems="15"
                android:gravity="right"
                android:hint="نزدیک ترین اشتراک (اختیاری)"
                android:inputType="number"
                android:maxLength="11"
                android:textAlignment="gravity"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_mobilenumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_illigalbranch_comment"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ems="15"
                android:hint="توضیحات (اختیاری)"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLength="100"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/row_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/textView_pic"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:scaleType="centerCrop"

                android:src="@mipmap/camera"
                android:textColor="#3e3e3e"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/textView_pic2"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:scaleType="centerCrop"

                android:src="@mipmap/camera"
                android:textColor="#3e3e3e"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/textView_pic3"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:scaleType="centerCrop"

                android:src="@mipmap/camera"
                android:textColor="#3e3e3e"
                android:visibility="visible" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_illigalbranch_ok"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="ثبت"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_illigalbranch_cancel"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="بازگشت"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
